{
  "info": {
    "name": "Crèche Parent Dashboard & Events API",
    "description": "API pour le tableau de bord Parent et la gestion des événements de classe",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Parent",
      "item": [
        {
          "name": "Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{parent_jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/parent/me",
              "host": ["{{base_url}}"],
              "path": ["parent", "me"]
            }
          }
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{parent_jwt}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"telephone\": \"06 12 34 56 78\",\n  \"adresse\": \"Rue Atlas, Marrakech\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/parent/me",
              "host": ["{{base_url}}"],
              "path": ["parent", "me"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{parent_jwt}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"newPassword\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/parent/me/change-password",
              "host": ["{{base_url}}"],
              "path": ["parent", "me", "change-password"]
            }
          }
        },
        {
          "name": "Get Child Presences",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{parent_jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/parent/enfants/{{enfant_id}}/presences?dateMin=2025-11-01&dateMax=2025-11-09&page=1&pageSize=30",
              "host": ["{{base_url}}"],
              "path": ["parent", "enfants", "{{enfant_id}}", "presences"],
              "query": [
                {
                  "key": "dateMin",
                  "value": "2025-11-01"
                },
                {
                  "key": "dateMax",
                  "value": "2025-11-09"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "30"
                }
              ]
            }
          }
        },
        {
          "name": "Get Latest Class Journal",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{parent_jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/parent/classes/{{classe_id}}/journal/latest",
              "host": ["{{base_url}}"],
              "path": ["parent", "classes", "{{classe_id}}", "journal", "latest"]
            }
          }
        },
        {
          "name": "Get My Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{parent_jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/parent/events?dateFrom=today&page=1&pageSize=20",
              "host": ["{{base_url}}"],
              "path": ["parent", "events"],
              "query": [
                {
                  "key": "dateFrom",
                  "value": "today"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin/Events",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titre\": \"Réunion parents-enseignants\",\n  \"description\": \"Salle bleue\",\n  \"startAt\": \"2025-11-30T14:00:00Z\",\n  \"endAt\": \"2025-11-30T16:00:00Z\",\n  \"classeId\": \"{{classe_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/events",
              "host": ["{{base_url}}"],
              "path": ["admin", "events"]
            }
          }
        },
        {
          "name": "List Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/events?classeId=&dateMin=2025-11-01&dateMax=2025-11-30&page=1&pageSize=20",
              "host": ["{{base_url}}"],
              "path": ["admin", "events"],
              "query": [
                {
                  "key": "classeId",
                  "value": ""
                },
                {
                  "key": "dateMin",
                  "value": "2025-11-01"
                },
                {
                  "key": "dateMax",
                  "value": "2025-11-30"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Event",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "events", "{{event_id}}"]
            }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titre\": \"Réunion parents-enseignants (mise à jour)\",\n  \"description\": \"Salle bleue - Mise à jour\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "events", "{{event_id}}"]
            }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_jwt}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/events/{{event_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "events", "{{event_id}}"]
            }
          }
        }
      ]
    }
  ],
