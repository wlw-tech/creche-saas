    },
    {
      "key": "enfant_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "classe_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "event_id",
      "value": "",
      "type": "string"
    }
  ]
}

