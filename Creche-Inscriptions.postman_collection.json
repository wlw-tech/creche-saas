{
  "info": {
    "name": "Crèche - Inscriptions API",
    "description": "API pour la gestion des inscriptions (candidatures, acceptation, rejet)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public - Inscriptions",
      "item": [
        {
          "name": "Créer une candidature d'inscription",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/public/inscriptions",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "public", "inscriptions"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"famille\": {\n    \"emailPrincipal\": \"sara@mail.com\",\n    \"languePreferee\": \"fr\",\n    \"adresseFacturation\": \"Rue Atlas, Marrakech\"\n  },\n  \"tuteurs\": [\n    {\n      \"lien\": \"Mere\",\n      \"prenom\": \"Sara\",\n      \"nom\": \"El Idrissi\",\n      \"email\": \"sara@mail.com\",\n      \"telephone\": \"+212612345678\",\n      \"principal\": true\n    },\n    {\n      \"lien\": \"Pere\",\n      \"prenom\": \"Youssef\",\n      \"nom\": \"Bennani\",\n      \"email\": \"youssef@mail.com\",\n      \"telephone\": \"+212687654321\",\n      \"principal\": false\n    },\n    {\n      \"lien\": \"Proche\",\n      \"prenom\": \"Grand-mère\",\n      \"nom\": \"Bennani\",\n      \"telephone\": \"+212611111111\",\n      \"principal\": false\n    }\n  ],\n  \"enfant\": {\n    \"prenom\": \"Mohammed Amine\",\n    \"nom\": \"Bennani\",\n    \"dateNaissance\": \"2022-06-14\",\n    \"genre\": \"M\"\n  },\n  \"classeIdSouhaitee\": \"{{classe_id}}\",\n  \"consentements\": {\n    \"photo\": true,\n    \"sortie\": true\n  },\n  \"commentaire\": \"Allergie aux arachides, aucun médicament\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Admin - Inscriptions",
      "item": [
        {
          "name": "Lister les inscriptions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/admin/inscriptions?statut=CANDIDATURE&page=1&pageSize=25",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "admin", "inscriptions"],
              "query": [
                {
                  "key": "statut",
                  "value": "CANDIDATURE"
                },
                {
                  "key": "q",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "dateMin",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "dateMax",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "25"
                }
              ]
            }
          }
        },
        {
          "name": "Récupérer une inscription",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/admin/inscriptions/{{inscriptionId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "admin", "inscriptions", "{{inscriptionId}}"]
            }
          }
        },
        {
          "name": "Mettre à jour le statut",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/admin/inscriptions/{{inscriptionId}}/status",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "admin", "inscriptions", "{{inscriptionId}}", "status"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"statut\": \"EN_COURS\",\n  \"notes\": \"En cours de vérification\"\n}"
            }
          }
        },
        {
          "name": "Rejeter une inscription",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/admin/inscriptions/{{inscriptionId}}/reject",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "admin", "inscriptions", "{{inscriptionId}}", "reject"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"raison\": \"Dossier incomplet - documents manquants\"\n}"
            }
          }
        },
        {
          "name": "Accepter et provisionner (envoie email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Accepté - Bienvenue à la crèche!\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/admin/inscriptions/{{inscriptionId}}/accept",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "admin", "inscriptions", "{{inscriptionId}}", "accept"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "inscriptionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "classe_id",
      "value": "",
      "type": "string"
    }
  ]
}

