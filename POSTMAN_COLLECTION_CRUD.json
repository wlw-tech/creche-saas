{
  "info": {
    "name": "Crèche API - CRUD Complet",
    "description": "Collection complète pour tester tous les endpoints CRUD de l'API Crèche",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. AUTH - Login Admin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@wlw.ma\",\n  \"password\": \"change_me\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "response": []
    },
    {
      "name": "2. CREATE - Inviter Enseignant",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"teacher1@wlw.ma\",\n  \"prenom\": \"Ahmed\",\n  \"nom\": \"Bennani\",\n  \"telephone\": \"+212612345678\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/admin/users/teachers/invite",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "teachers", "invite"]
        }
      },
      "response": []
    },
    {
      "name": "3. READ ALL - Lister Utilisateurs",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/users?page=1&limit=10",
          "host": ["{{base_url}}"],
          "path": ["admin", "users"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "role",
              "value": "ENSEIGNANT",
              "disabled": true
            },
            {
              "key": "statut",
              "value": "INVITED",
              "disabled": true
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "4. READ ONE - Obtenir Utilisateur",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/users/{{userId}}",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "{{userId}}"]
        }
      },
      "response": []
    },
    {
      "name": "5. UPDATE - Modifier Statut",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"statut\": \"ACTIVE\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/admin/users/{{userId}}/status",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "{{userId}}", "status"]
        }
      },
      "response": []
    },
    {
      "name": "6. DELETE - Supprimer Utilisateur",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/admin/users/{{userId}}",
          "host": ["{{base_url}}"],
          "path": ["admin", "users", "{{userId}}"]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ]
}

